<h1>I've Got a Question</h1>
<form>
  <div class="form-group">
    <label for="question">Question:</label>
    {{input value=question id="question" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author:</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="description">Description:</label>
    {{textarea value=description id="description" class="form-control" rows="15"}}
  </div>

  <button class="btn btn-primary btn-block" {{action 'save'}}>Save</button>
</form>
