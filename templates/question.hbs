<h1>{{question}}</h1>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="question">Question</label>
      {{input value=question id="question" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{textarea value=description id="description" class="form-control" rows="10"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <h4>asked by: {{author}}</h4>

  <p>{{description}}</p>

  <button class="btn btn-warning" {{action 'edit'}}>Edit</button>
  <button class="btn btn-danger"  {{action 'delete'}}>Delete</button>
{{/if}}


<h2>Answers</h2>

{{#each answer in answers itemController="answer"}}
  <p>
    {{answer.poster}} says:
  </p>
  <p>
    {{answer.text}}
    <button class="btn btn-xs btn-danger" {{action 'delete'}}>delete</button>
  </p>
{{/each}}

<p>{{#link-to 'new-answer' this class="btn btn-success"}}What's Your Answer?{{/link-to}}</p>

{{outlet}}
